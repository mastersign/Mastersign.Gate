<UserControl x:Class="Mastersign.Gate.SetupControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mastersign.Gate"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance IsDesignTimeCreatable=True, Type={x:Type local:DesignTimeSetup}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Label x:Name="lblDirectory" Grid.Row="0" Grid.Column="0"
               HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,10,6"
               Content="Config Directory"/>
        <TextBox x:Name="txtDirectory" Grid.Row="0" Grid.Column="1"
                 HorizontalAlignment="Stretch" VerticalAlignment="Top"
                 Text="{Binding Directory}"/>
        <Button x:Name="btnDirectoryBrowse" Grid.Row="0" Grid.Column="2" Margin="0,0,0,6"
                HorizontalAlignment="Right" VerticalAlignment="Top" Padding="8,0,8,0"
                Content="..."/>
        <Label x:Name="lblLogDirectory" Grid.Row="1" Grid.Column="0"
               HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,10,6"
               Content="Log Directory"/>
        <TextBox x:Name="txtLogDirectory" Grid.Row="1" Grid.Column="1"
                 HorizontalAlignment="Stretch" VerticalAlignment="Top"
                 Text="{Binding LogDirectory}"/>
        <Button x:Name="btnLogDirectoryBrowse" Grid.Row="1" Grid.Column="2" Margin="0,0,0,6"
                HorizontalAlignment="Right" VerticalAlignment="Top" Padding="8,0,8,0"
                Content="..."/>
        <Label x:Name="lblCertificateDirectory" Grid.Row="2" Grid.Column="0"
               HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,10,6"
               Content="Certificate Directory"/>
        <TextBox x:Name="txtCertificateDirectory" Grid.Row="2" Grid.Column="1"
                 HorizontalAlignment="Stretch" VerticalAlignment="Top"
                 Text="{Binding CertificateDirectory}"/>
        <Button x:Name="btnCertificateDirectoryBrowse" Grid.Row="2" Grid.Column="2" Margin="0,0,0,6"
                HorizontalAlignment="Right" VerticalAlignment="Top" Padding="8,0,8,0"
                Content="..."/>

        <Label x:Name="lblServer" Grid.Row="3" Grid.Column="0"
               HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,10,6"
               Content="Server" FontWeight="Bold"/>
        <local:ServerControl x:Name="crtlServer" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2"
                             HorizontalAlignment="Stretch" VerticalAlignment="Top"
                             DataContext="{Binding Server}"/>

        <Label x:Name="lblServices" Grid.Row="4" Grid.Column="0"
               HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,10,6"
               Content="Services" FontWeight="Bold"/>
        <Button x:Name="btnAssService" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2"
                HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,0,6"
                Content="Add Service" />
        <ItemsControl x:Name="itemsServices" Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2"
                      HorizontalAlignment="Stretch" VerticalAlignment="Top"
                      ItemsSource="{Binding Server.Services}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Vertical" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0"
                                    HorizontalAlignment="Right"
                                    Orientation="Horizontal">
                            <Button Content="Up" Margin="0,0,10,6"/>
                            <Button Content="Down" Margin="0,0,10,6"/>
                            <Button Content="Delete" Margin="0,0,0,6"/>
                        </StackPanel>
                        <local:ServiceControl Grid.Row="1" />
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        
    </Grid>
</UserControl>
